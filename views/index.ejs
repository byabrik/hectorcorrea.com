<!DOCTYPE html>

<html ng-app="hcApp" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="HectorCorrea.com">
    <meta name="author" content="hector@hectorcorrea.com">

    <title>HectorCorrea.com</title>

    <!-- Icon for Apple devices -->
    <link rel="apple-touch-icon" href="/favicon.png"/>

    <!-- Set to false to load load CSS & JS from localhost -->
    <% var isConnected = true; %>

    <!-- Bootstrap core CSS -->
    <% if(isConnected) { %>
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc2/css/bootstrap-glyphicons.css" rel="stylesheet">
    <% } else { %>
      <link href="/css/bootstrap.min.css" rel="stylesheet">
      <link href="/css/bootstrap-glyphicons.css" rel="stylesheet">
    <% } %>

    <style>
    /* 
     * css/jumbotron.css
     * Move down content because we have a fixed navbar that is 50px tall 
     */
    body {
      padding-top: 50px;
      padding-bottom: 20px;
    }

    /* Custom code and terminal styles */
    pre { margin-left: 20px; }

    pre.code
    {
        margin-left: 20px;
        margin-bottom: 20px;
        background-color: #363446;
        color: #A0A0A0; /* gray-ish */
        padding-bottom: 10px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 50px;
    }

    pre.terminal
    {
        margin-left: 20px;
        margin-bottom: 20px;
        background-color: #363446;
        color: #DAD681; /* yellow-ish */
        padding-bottom: 10px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 50px;
    }

    p, li 
    { 
      font-family: 'PT Serif', Georgia, Times, 'Times New Roman', serif; 
      font-size: 18px; 
    }

    </style>

    <% var isAnalytics = true; %>

    <% if(isAnalytics) { %>
      <!-- Wire up Google Analytics -->
      <script type="text/javascript">
          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-22762001-1']);
          _gaq.push(['_trackPageview']);
      </script>

      <!-- Wire up Google Search Button -->
      <script>
        (function() {
          var cx = '010823626177435732964:2iqm-7sb1m0';
          var gcse = document.createElement('script'); gcse.type = 'text/javascript'; gcse.async = true;
          gcse.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') +
              '//www.google.com/cse/cse.js?cx=' + cx;
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(gcse, s);
        })();
      </script>
    <% } %>

  </head>

  <body style="">

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/#/">Hector Correa</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a ng-href="/#/">Home</a></li>
            <li><a ng-href="/#/about">About</a></li>
            <li><a ng-href="/#/blog">Blog</a></li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </div>

    <div class="container">
      <% if(typeof(error) === 'undefined') { %>
        <div ng-view>
          <img src="https://s3-us-west-2.amazonaws.com/hectorcorrea/images/loadingsmall.gif"/>Loading...
        </div>
      <% } else { %>
        <div>ERROR: <%= error %></div>
      <% } %>
      <hr>
    </div> <!-- /container -->

    <div class="container">
      <footer>
        <p>&copy; 2003-<%= (new Date()).getFullYear() %> Hector Correa, all rights reserved. <a ng-href="/#/credits">Credits</a>
        </p>
      </footer>
    </div>

    <!-- Bootstrap core JavaScript -->
    <% if(isConnected) { %> 
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
      <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>    
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"></script>    
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-cookies.min.js"></script>    
    <% } else { %>
      <script src="/js/jquery.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/js/angular.min.js"></script>
      <script src="/js/angular-resource.min.js"></script>
      <script src="/js/angular-cookies.min.js"></script>
    <% } %>
    <script src="/js/app.js"></script>
  
    <!-- Close the menu when clicking on any of the menu options -->
    <script type="text/javascript">
      $('.nav li a').on('click',function(){
        $('.navbar-collapse').collapse('hide');
      });
    </script>

    <% if(isAnalytics) { %>
      <!-- Track visit with Google Analytics -->
      <script type="text/javascript">      
        (function () {
            var ga = document.createElement('script');
            ga.type = 'text/javascript'; 
            ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; 
            s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% } %>

  </body>
</html>



